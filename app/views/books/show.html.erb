<main>
  <p id="notice"><%= notice %></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      
      <div class="col-md-3">
        <%= render 'users/userinfo', user:@user %>
        <%= render 'books/new', book:@book_new %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">

          <tbody>
            <td>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:'40x40' %>
              <br>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title,book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            
            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success' %></td>
              <td><%= link_to "Destroy", book_path(@book), class: 'btn btn-sm btn-danger' ,method: :delete, "data-confirm" => "本当に消しますか?" %></td>
            <% end %>
            
          </tbody>
          
        </table>
      </div>
      
    </div>
  </div>
</main>