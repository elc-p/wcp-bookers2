<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    
    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
    </div>
    <% end %>
    
    <div class="row">
      
      <div class="col-md-3">
        <%= render 'users/userinfo', user:@user %>
        <%= render 'books/new', book:@book %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          
          <% @books.each do |book| %>
          <tbody>
            <td><%= link_to attachment_image_tag(book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:'40x40'), user_path(book.user.id) %></td>
            <td><%= link_to book.book_title, book_path(book.id) %></td>
            <td><%= book.opinion %></td>
          </tbody>
          <% end %>
          
        </table>
      </div>
      
    </div>
  </div>
</main>
